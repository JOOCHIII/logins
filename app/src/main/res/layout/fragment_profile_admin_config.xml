<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil del Administrador"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1E1E1E"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imageViewAdmin"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/persona"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/circle_background"
            android:padding="10dp" />

        <!-- Card contenedor -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"

            android:padding="16dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Campos -->
                <EditText
                    android:id="@+id/editTextNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre completo"
                    android:textColorHint="#808080"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_border"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/editTextCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo electrónico"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_border"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/editTextTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Teléfono"
                    android:inputType="phone"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_border"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Línea divisora -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginVertical="12dp" />

                <!-- Contraseñas -->
                <EditText
                    android:id="@+id/editTextNuevaContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nueva contraseña"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_border"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/editTextConfirmarContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirmar contraseña"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_border"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botón guardar -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGuardarCambios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Cambios"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0928CC"
            android:padding="12dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_rounded" />
    </LinearLayout>
</ScrollView>
